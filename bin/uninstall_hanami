#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

declare -a gems=(hanami-utils hanami-validations hanami-router hanami-model hanami-view hanami-controller hanami-mailer hanami-cli hanami-helpers hanami-assets hanami-events hanami)

uninstall_gems() {
  echo "== Uninstalling gems.."
  for rubygem in "${gems[@]}"
  do
    gem uninstall -axI $rubygem
  done
}

main() {
  uninstall_gems
}

main
