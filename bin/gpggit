#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

setup() {
  # Export this ENV var in your .bashrc or .zshrc
  export GPG_TTY=$(tty)

  git config --global gpg.program `which gpg2`
  git config --global commit.gpgsign true
}

generate_key() {
  cat >.gpgconfig <<EOF
     %echo Generating a basic OpenPGP key
     Key-Type: 1
     Key-Length: 2048
     Subkey-Type: 1
     Subkey-Length: 2048
     Name-Real: `git config --get user.name`
     Name-Email: `git config --get user.email`
     Expire-Date: `date -v +30d "+%Y-%m-%d"`
     %commit
     %echo done
EOF
  gpg2 --batch --gen-key .gpgconfig
  rm .gpgconfig
}

export_key() {
  signingkey=$(gpg2 --list-secret-keys --keyid-format LONG "`git config --get user.email`" | grep sec | awk '{print $2}' | awk -F'/' '{print $2}' | tail -n 1)
  git config --global user.signingkey $signingkey
}

restart_agent() {
  # The agent will restart automatically at the first usage
  gpgconf --kill gpg-agent
}

main() {
  setup
  generate_key
  export_key
  restart_agent
}

main
