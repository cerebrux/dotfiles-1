#!/bin/bash
vimhome=$HOME/.vim
plugins=$vimhome/.plugins
base=$vimhome/bundle
golang=/usr/local/go

mkdir -p $base

while read name git
do
  path="$base/$name"

  if [ -d $path ]; then
    echo "Updating $name"
    cd $path && git pull
  else
    echo "Installing $name"
    git clone $git $path
  fi
done < $plugins

mkdir -p $vimhome/syntax
cp $golang/misc/vim/syntax/go.vim $vimhome/syntax
