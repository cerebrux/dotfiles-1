#!/usr/bin/env bash
output=$1

CODE=$( cat <<EOS
#!/usr/bin/env ruby
# frozen_string_literal: true

require "benchmark/ips"

Benchmark.ips do |x|
  x.report("") {}
  x.report("") {}
end

__END__
EOS)

echo "$CODE" > $output
chmod +x $1

echo Ruby:      >> $output
echo ""         >> $output
echo -en '    ' >> $output
echo $(ruby -v) >> $output
echo ""         >> $output

system_profiler SPHardwareDataType SPSoftwareDataType -detailLevel mini >> $output
